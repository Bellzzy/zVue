// el-input
.el-input__inner
	height: 24px
	line-height: 24px
.el-input__icon
	line-height: 24px
.el-checkbox__input.is-disabled.is-checked .el-checkbox__inner	
	background-color: #ccc
	border-color: #ccc
.el-checkbox__input.is-disabled.is-checked .el-checkbox__inner::after
	border-color: #888
// .el-select
.el-select
	.el-input__icon
		width: 20px
	.el-input__inner
		padding-right: 20px
.el-select-dropdown__item
	height: 24px
	line-height: 24px
	span
		line-height: 24px !important
	
// el-table
.el-table__header th
	background-color: #f5f5f5
.el-table 
	td, th
		padding: 2px 0
	.el-button
		vertical-align: middle
	
// el-form
.el-form-item
	margin-bottom: 10px
	.el-form-item__content, .el-form-item__label
		line-height: 30px
	.el-input, .el-select
		width: 70%
	.el-select .el-input
		width: 100%
	.el-form-item__error
		top: 100%
		transform: translateY(-30%)
		left: 0
.el-date-editor--daterange
	width: 210px !important
	.el-range__icon, .el-range-separator, .el-range__close-icon
		line-height: 18px

.el-date-editor .el-range-input
		font-size: 12px
// el-tree
.el-tree-node__content
	height: 30px
	
.xpt-text_ellipsis
	overflow: hidden
	text-overflow: ellipsis
	white-space: nowrap
#xpt-tooltip
	position: fixed

.cc-icon-data, 
.cc-icon-home, 
.cc-icon-cus, 
.cc-icon-custask, 
.cc-icon-ship
	width: 15px
	height: 15px
	background-image: url('/static/icon.png')
	background-size: cover
