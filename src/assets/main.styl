.menu
	width: 200px
	position: absolute
	top: 0
	left: 0
	bottom: 0
	background-color: #2c3b41
	border-right: solid 1px #e6e6e6
	h1
		height: 40px
		line-height: 40px
		color: #fff
		font-size: 14px !important
		text-align: center
	.el-menu
		border-right: none
		span
			font-size: 14px
	[class*="el-icon-"]
		color: #fff !important
	.el-menu-item, .el-submenu__title
		height: 36px !important
		line-height: 36px !important
	.el-menu-item.is-active
		background-color: #1cbba7 !important
		color: #fff !important
	li:hover
		background-color:#1e282c !important
.navbar
	height: 40px
	margin-left: 200px
	>*
		display: inline-block
		vertical-align: middle
		height: 100%
		line-height: 40px
		padding: 0 10px
	.signout, .userinfo
		float: right
	.title
		font-size: 16px !important
		font-weight: 700
.main 
	position: absolute
	top: 40px
	left: 200px
	right: 0
	bottom: 0
	padding: 10px
	background-color: #f2f2f2
	display: flex
	flex-direction: column
	.main-search
		background-color: #fff
		overflow: hidden
		box-sizing: border-box
		border-bottom: 5px solid #f2f2f2
		position: relative
		.main-search__title
			height: 30px
			line-height: 30px
			background-color: #f2f2f2
			font-size: 16px !important
		.main-search__body
			border-top: 2px solid #1cbba7
			padding-right: 100px
			min-height: 40px
			.item
				display: inline-block
				width: 210px
				height: 40px
				padding-left: 80px
				position: relative
				vertical-align: top
				margin-right: 10px
				box-sizing: border-box
				>label
					position: absolute
					top: 12px 
					left: 0
					width: 96px
					text-align: right
				>label+*
					margin: 9px 0 0 20px
					width: 100%
				.el-radio-group
					margin-top: 14px
			.daterange
				width: 280px
			.opt
				width: auto
				height: 40px
				padding: 0 10px
				display: inline-block
				.el-button
					vertical-align: middle
				&:before
					content: ' '
					visibility: hidden
					height: 100%
					display: inline-block
					vertical-align: middle
			.opt.block
				display: block
		.main-search__btn
			position: absolute
			top: 30px
			right: 0
			width: 100px
			height: 42px
			border-radius: 0
			font-size: 16px
			z-index: 2
		.main-search__opt
			text-align: right
			line-height: 30px
				
	.main-body
		border-top: 2px solid #1cbba7
		background-color: #fff
		padding: 5px
		position: relative
		overflow: hidden
		flex: 1
		.tablebox 
			position: absolute
			top: 5px
			right: 5px
			left: 5px
			bottom: 35px
		.footer
			position: absolute
			bottom: 0
			right: 10px
			height: 30px
			padding: 0
			text-align: right
.alert
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	z-index: 9
	background-color: rgba(0, 0, 0, .5)
	.alert-body
		position: absolute
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		background-color: #fff
		width: 1200px
		height: 800px
		display: flex
		flex-direction: column
		border-radius: 4px
		box-shadow: 0 0 30px rgba(0, 0, 0, .5)
		transition: all .3s
		.alert-body__title
			height: 30px
			line-height: 30px
			padding: 0 10px
			border-bottom: 1px solid #a2a2a2
			// background-color: #f2f2f2
			border-radius: 4px 4px 0 0
			strong
				font-size: 14px !important
				font-weight: 700
			.close,.plus
				width: 30px
				height: 30px
				padding: 5px
				float: right
				text-align: center
				box-sizing: border-box
				cursor: pointer
				i
					font-size: 20px !important
					transition: all .5s
					&:hover
						color: #1cbba7 !important
		.alert-body__component
			flex: 1
			padding: 10px 10px 0 10px
			display: flex
			flex-direction: column
			>:first-child
				flex: 1
				overflow: auto
			.el-input
				width: 180px
			.opt
				height: 45px
				line-height: 45px
				border-top: 1px solid #f2f2f2
				text-align: right
				padding: 4px 0
				.el-button
					width: 100px
					height: 36px
			.errorbg
				display: block
				width:100%
				height: 100%
				background-image: url('/static/404.png')
				background-size: cover
			.errorinfo
				position: absolute
				top: 50%
				left: 50%
				transform: translate(-50%, -50%)
				h1 
					font-size: 50px !important
					text-align: center
				
.loading
	position: absolute
	top: 50%
	left: 50%
	i
		width: 4px
		height: 4px
		border-radius: 2px
		background: #ff4040
		float: left
		margin: 0 3px
		animation: demo1 linear 1s infinite
		-webkit-animation: demo1 linear 1s infinite
	i:nth-child(1)
		animation-delay:0s
	i:nth-child(2)
		animation-delay:0.15s
	i:nth-child(3)
		animation-delay:0.3s
	i:nth-child(4)
		animation-delay:0.45s
	i:nth-child(5)
		animation-delay:0.6s
	@keyframes demo1 
		0%,60%,100% {transform: scale(1);}
		30% {transform: scale(2.5);}
	@-webkit-keyframes demo1 
		0%,60%,100% {transform: scale(1);}
		30% {transform: scale(2.5);}
